<?xml version="1.0" encoding="utf-8"?><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ignore="NamespaceTypo">-->


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_make_smart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MakeSmartActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/app_bar_make_smart"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="5dp"
                android:layoutDirection="rtl"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:scrollbars="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/activity_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="ارتباط بر قرار نیست ..." />

                        <Button
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:layout_marginTop="10dp"
                            android:drawableRight="@drawable/ic_bluetooth_searching_black_24dp"
                            android:text="بر قراری ارتباط"
                            android:background="#00bfa5"/>
                        <info.hoang8f.widget.FButton
                            android:id="@+id/btn_connect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:layout_marginTop="10dp"
                            android:text="بر قراری ارتباط"
                            android:background="#00bfa5"
                            android:textSize="16sp"
                            android:drawableTop="@drawable/ic_bluetooth_searching_black_24dp"
                            app:buttonColor="#00bfa5"
                            android:padding="14dp"
                            android:layout_gravity="center"



                            />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:gravity="center"
                        android:id="@+id/txtBlueToothStatus"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/colorAttachAudioStart"
                        android:textSize="18sp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="لامپ های جلو"
                        android:id="@+id/btn1"
                        android:drawableRight="@drawable/ic_con_bluetoth"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:background="@drawable/selector_xml_btn_yellow"
                        android:layout_gravity="center_horizontal"
                        android:onClick="checkLogin"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="لامپ های عقب"
                        android:id="@+id/btn2"
                        android:drawableRight="@drawable/ic_con_bluetoth"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:background="@drawable/selector_xml_btn_yellow"
                        android:layout_gravity="center_horizontal"
                        android:onClick="checkLogin"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="پرده"
                        android:id="@+id/btn3"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:drawableRight="@drawable/ic_con_bluetoth"
                        android:visibility="gone"
                        android:background="@drawable/selector_xml_btn_yellow"
                        android:layout_gravity="center_horizontal"
                        android:onClick="checkLogin"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="صدا"
                        android:id="@+id/btn4"
                        android:drawableRight="@drawable/ic_con_bluetoth"

                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:visibility="gone"
                        android:background="@drawable/selector_xml_btn_yellow"
                        android:layout_gravity="center_horizontal"
                        android:onClick="checkLogin"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="پروژکتور"
                        android:id="@+id/btn5"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"
                        android:visibility="gone"
                        android:drawableRight="@drawable/ic_con_bluetoth"
                        android:background="@drawable/selector_xml_btn_yellow"
                        android:layout_gravity="center_horizontal"
                        android:onClick="checkLogin"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="ورودی 6"
                        android:id="@+id/btn6"
                        android:textColor="@color/colorWhite"
                        android:textSize="19sp"

                        android:drawableRight="@drawable/ic_con_bluetoth"
                        android:background="@drawable/selector_xml_btn_yellow"
                        android:layout_gravity="center_horizontal"
                        android:onClick="checkLogin"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.8">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Input some text" />
                        </android.support.design.widget.TextInputLayout>

                        <Button
                            android:id="@+id/btn_send"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            android:text="send" />
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:scrollbars="vertical"
                        >

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="24dp"
                            android:elevation="5dp"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            fbutton:cardBackgroundColor="#00bfa5"
                            fbutton:cardCornerRadius="5dp">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="16dp"
                                android:padding="4dp"
                                android:text="روشن کردن لامپ ها"
                                android:textColor="#ffffff"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txtOn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="24dp"
                                android:padding="4dp"
                                android:gravity="right"
                                android:layout_weight=".6"
                                android:text="لامپ های جلو" />

                            <com.rey.material.widget.Switch
                                android:id="@+id/switchlamp"
                                style="@style/Material.Widget.Switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="24dp"
                                android:checked="false"
                                android:gravity="center"
                                android:visibility="gone"
                                android:padding="8dp"
                                android:layout_margin="4dp"/>

                            <info.hoang8f.widget.FButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnLampFront"
                                android:text="روشن/خاموش"
                                android:textSize="8sp"
                                android:drawableTop="@drawable/ic_lamp"
                                android:textColor="@color/colorWhite"
                                app:buttonColor="@color/colorPrimary"
                                android:padding="14dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_weight=".3"

                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:padding="8dp">

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="24dp"
                                android:padding="4dp"
                                android:gravity="right"
                                android:layout_weight=".6"
                                android:text="لامپ های عقب" />

                            <com.rey.material.widget.Switch

                                style="@style/Material.Widget.Switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="24dp"
                                android:checked="false"
                                android:gravity="center"
                                android:padding="8dp"
                                android:layout_margin="4dp"
                                android:visibility="gone"/>

                            <info.hoang8f.widget.FButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnLampBack"
                                android:drawableTop="@drawable/ic_lamp"


                                android:textColor="@color/colorWhite"
                                android:background="@color/colorPrimary"
                                app:buttonColor="@color/colorPrimary"
                                android:text="روشن/خاموش"
                                android:textSize="8sp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_weight=".3"

                                />


                        </LinearLayout>

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/spinner_lamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:visibility="gone"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:scrollbars="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="24dp"
                            android:elevation="5dp"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            fbutton:cardBackgroundColor="#00bfa5"
                            fbutton:cardCornerRadius="5dp"
                            >
                            <!-- fbutton:cardBackgroundColor="#00b0ff" -->

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="16dp"
                                android:padding="4dp"
                                android:text="پرده"
                                android:textColor="#ffffff"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:padding="8dp">

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="24dp"
                                android:gravity="right"
                                android:padding="4dp"
                                android:layout_weight=".6"
                                android:text="بالا" />


                            <info.hoang8f.widget.FButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnPardeh"
                                android:drawableTop="@drawable/ic_curtain"

                                android:text="بالا"
                                android:textSize="8sp"

                                android:textColor="@color/colorWhite"
                                android:background="@color/colorPrimary"
                                app:buttonColor="@color/colorPrimary"
                                android:padding="14dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_weight=".3"

                                 />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txtpardehOn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="24dp"
                                android:gravity="right"
                                android:padding="4dp"
                                android:layout_weight=".6"
                                android:text="پایین" />

                            <com.rey.material.widget.Switch
                                android:id="@+id/switchPardeh"
                                style="@style/Material.Widget.Switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="24dp"
                                android:checked="false"
                                android:gravity="center"
                                android:padding="8dp"
                                android:visibility="gone"/>
                            <info.hoang8f.widget.FButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnPardehDown"
                                android:drawableTop="@drawable/ic_curtain"

                                android:text="پایین"
                                android:textSize="8sp"

                                android:textColor="@color/colorWhite"
                                android:background="@color/colorPrimary"
                                app:buttonColor="@color/colorPrimary"
                                android:padding="14dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_weight=".3"

                                />

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:scrollbars="vertical"
                        android:visibility="gone">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="24dp"
                            android:elevation="5dp"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            fbutton:cardBackgroundColor="#00bfa5"
                            fbutton:cardCornerRadius="5dp">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="16dp"
                                android:padding="4dp"
                                android:text="تنظیم صدا"
                                android:textColor="#ffffff"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:padding="8dp"
                            >

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="24dp"
                                android:padding="4dp"
                                android:gravity="right"
                                android:layout_weight=".6"
                                android:text="روشن/خاموش" />

                            <com.rey.material.widget.Switch
                                android:id="@+id/switchSound"
                                style="@style/Material.Widget.Switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="24dp"
                                android:checked="false"
                                android:gravity="center"
                                android:padding="8dp"
                                android:visibility="gone"/>
                            <info.hoang8f.widget.FButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnsound"
                                android:drawableTop="@drawable/ic_sound_on"

                                android:text="روشن/خاموش"
                                android:textSize="8sp"
                                android:textColor="@color/colorWhite"
                                android:background="@color/colorPrimary"
                                app:buttonColor="@color/colorPrimary"
                                android:padding="14dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_weight=".3"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/audio" />

                            <com.rey.material.widget.Slider
                                android:id="@+id/sliderVolume"
                                style="@style/Material.Widget.Slider"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="18dp"
                                app:sl_maxValue="100"
                                app:sl_minValue="0"
                                app:sl_value="50" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="3dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:scrollbars="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="24dp"
                            android:elevation="5dp"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            fbutton:cardBackgroundColor="#00bfa5"
                            fbutton:cardCornerRadius="5dp">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="16dp"
                                android:padding="4dp"
                                android:text="پروژکتور"
                                android:textColor="#ffffff"
                                android:textSize="18sp" />
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:orientation="horizontal" android:layout_gravity="center">

                            <TextView
                                android:id="@+id/txtOff"
                                android:layout_width="0dp"
                                android:layout_weight=".6"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="24dp"
                                android:padding="4dp"
                                android:text="روشن/خاموش" />

                            <com.rey.material.widget.Switch
                                android:id="@+id/switchprojector"
                                style="@style/Material.Widget.Switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="24dp"
                                android:checked="false"
                                android:gravity="center"
                                android:padding="8dp"
                                android:visibility="gone"/>

                            <info.hoang8f.widget.FButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnProjector"
                                android:drawableTop="@drawable/ic_projector"
                                android:text="روشن/خاموش"
                                android:textSize="8sp"
                                android:textColor="@color/colorWhite"
                                android:background="@color/colorPrimary"
                                app:buttonColor="@color/colorPrimary"
                                android:padding="14dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="8dp"
                                android:layout_weight=".3"

                                />

                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>


        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>


</android.support.v4.widget.DrawerLayout>


    <!--<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
